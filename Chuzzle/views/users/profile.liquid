{% layout 'layout.liquid'%}

{% block content %}


<div class="main-display">
    <div class="info-container">
        <h1>Edit user info</h1>
        <div class="info">
            <h1>This is my user {{user.name}}</h1>
        </div>
    </div>
    <div class="info-container">
    <h1>Edit Your Tactics</h1>
    <div class="info">
        <h1>These are my tactics by FEN</h1>
        {% for tact in tactList %}
            <p>{{tact.fen}}</p>
        {% endfor %}
    </div>
    </div>
    <div class="info-container">
    <h1>Edit Comments</h1>
    <div class="info">
        <h1>These are my comments</h1>
        {% for com in comList%}
        <h3>{{com.username}}</h3>
        <p>{{com.body}}</p>
        {% endfor %}
    </div>
    </div>
</div>


{% endblock %}